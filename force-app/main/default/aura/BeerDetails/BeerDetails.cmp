<aura:component>
  <aura:attribute name="beerId" type="String" />
  {!beerId}
  <div class="slds-var-p-around_small">
    <lightning:recordForm
        recordId="{!v.beerId}"
        objectApiName="Beer__c"
        layoutType="Compact"
        columns="2"
        mode="readonly" />
  </div>
  <div class="slds-var-p-around_small">

    <lightning:button variant="brand" label="Order Now" value="Order Now" ="title" onclick="{! c.doOrder }"/>
  </div>
</aura:component>
